# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============ CRITICAL - REQUIRED ============

# Google AI API Key (get from https://aistudio.google.com/app/apikey)
GOOGLE_API_KEY=your-google-api-key-here

# Database file location (use /data/database.db in Railway)
DATABASE_FILE=/data/database.db

# ============ SECURITY ============

# Environment (always 'production' in production!)
NODE_ENV=production

# Cookie Security (MUST be 'true' in production with HTTPS)
COOKIE_SECURE=true
COOKIE_SAMESITE=strict

# CORS - Allowed origin (your client URL)
# Example: https://your-app.up.railway.app
API_ALLOWED_ORIGIN=https://your-client-domain-here

# ============ RATE LIMITING ============

# General API rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Admin endpoint rate limiting (stricter)
ADMIN_RATE_LIMIT_WINDOW_MS=60000
ADMIN_RATE_LIMIT_MAX=30

# ============ SESSIONS ============

# Session timeout in milliseconds
# Default: 2592000000 (30 days)
SESSION_TTL_MS=2592000000

# ============ LOGGING ============

# Log format: 'combined', 'common', 'dev', 'short', 'tiny'
LOG_FORMAT=combined

# ============ SERVER ============

# API Port (Railway will override this)
API_PORT=3001
PORT=3001

